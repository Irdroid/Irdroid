<RelativeLayout         android:layout_alignParentBottom="true" 
android:id="@+id/InnerRelativeLayout"

>







<ca.idi.tecla.lib.Spinner android:layout_height="wrap_content" android:id="@+id/Spinner02" android:layout_width="fill_parent"  android:layout_alignParentBottom="true" android:nextFocusLeft="@id/Spinner01" android:nextFocusRight="@id/apple_volup" android:nextFocusDown="@id/apple_volup"></ca.idi.tecla.lib.Spinner>
 <TextView  
         android:layout_width="fill_parent"  
